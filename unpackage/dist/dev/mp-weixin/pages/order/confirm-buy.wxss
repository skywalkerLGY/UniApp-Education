.confirm-order {
  font-size: 29rpx;
  color: #333;
}
.goods {
  padding: 20rpx 30rpx 0 30rpx;
  background-color: #FFFFFF;
}
.card {
  padding: 0 30rpx;
  background-color: #FFFFFF;
  margin-top: 30rpx;
  box-shadow: 1px 0 5px 0 rgba(0, 0, 0, 0.08);
  border-radius: 20rpx;
}
.option-pay .title {
  line-height: 90rpx;
  border-bottom: 0.5px solid #efeff4;
}
.option-pay .ios {
  line-height: 90rpx;
}
.option-pay .ios text:last-child {
  color: #FA140E;
}
.option-pay .pay-item {
  line-height: 90rpx;
}
.option-pay .pay-item .left image {
  width: 60rpx;
  height: 60rpx;
}
.option-pay .pay-item .left text {
  font-size: 33rpx;
  padding-left: 20rpx;
}
.price > view {
  line-height: 90rpx;
  border-bottom: 1px solid #F8F9FB;
}
.pay {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
  background-color: #FFFFFF;
  border-top: 0.5px solid #efeff4;
}
.pay view:first-child > text:last-child {
  color: #FA140E;
  font-size: 35rpx;
}
.pay .btn {
  background-color: #345dc2;
  color: #FFFFFF;
  border-radius: 50rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}
.pay .btn::after {
  border: none;
}

