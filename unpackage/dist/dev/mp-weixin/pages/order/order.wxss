.order-item {
  background-color: #FFFFFF;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  font-size: 25rpx;
  border-bottom: 0.5px solid #efeff4;
}
.order-item .base-info {
  color: #333333;
}
.order-item .base-info text:first-child {
  margin-right: 20rpx;
}
.order-item .shifu {
  text-align: right;
  line-height: 70rpx;
}
.order-item .shifu text:last-child {
  font-size: 35rpx;
  color: #FA140E;
}
.order-item .option button {
  font-size: 20rpx;
  margin-left: 10rpx;
}
.order-item .option .red {
  color: #FA140E;
}
.order-item .option .grey {
  color: #959DA5;
}
.bottom-ios {
  z-index: 100;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #FFFFFF;
  padding: 30rpx 40rpx;
  border-top: 0.5px solid #efeff4;
}
.bottom-ios .title {
  font-size: 38rpx;
  margin-bottom: 20rpx;
  text-align: center;
}
.bottom-ios .title text:first-child {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  margin-left: 70rpx;
}
.bottom-ios .title text:last-child {
  color: #959DA5;
  font-size: 35rpx;
}
.bottom-ios .price {
  font-size: 30rpx;
  line-height: 90rpx;
}
.bottom-ios .price text:last-child {
  color: #FA140E;
}
.bottom-ios .btn {
  background-color: #345dc2;
  color: #FFFFFF;
  border-radius: 50rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  margin-top: 30rpx;
}
.bottom-ios .btn::after {
  border: none;
}

