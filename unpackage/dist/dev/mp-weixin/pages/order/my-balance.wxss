/* 下划线 */
.money {
  height: 288rpx;
  background-color: #345dc2;
  color: #FFFFFF;
  font-size: 88rpx;
}
.money text:first-child {
  color: #e7e4e9;
  font-size: 30rpx;
}
.recharge {
  margin: 20rpx 0 0 20rpx;
  font-size: 30rpx;
  color: #999999;
}
.recharge .list {
  margin-top: 20rpx;
  text-align: center;
}
.recharge .list > view {
  float: left;
  width: 225rpx;
  border: 1px solid #F8F9FB;
  border-radius: 10rpx;
  background-color: #FFFFFF;
  margin-right: 10rpx;
  margin-bottom: 15rpx;
  padding: 20rpx 0;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.recharge .list > view view:first-child {
  color: #FA140E;
  font-size: 36rpx;
}
.active {
  box-shadow: 0 0 0 0.5px #FA140E;
}
.desc {
  clear: both;
  margin: 0 20rpx;
  font-size: 30rpx;
  line-height: 45rpx;
  color: #6e6d70;
}
.desc view:first-child {
  font-weight: bold;
  padding-top: 50rpx;
  padding-bottom: 30rpx;
}
.desc view:last-child {
  padding-bottom: 120rpx;
}
.bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  background-color: #FFFFFF;
  border-top: 0.5px solid #efeff4;
}
.bottom .btn {
  width: 700rpx;
  background-color: #345dc2;
  color: #FFFFFF;
  border-radius: 50rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}
.bottom .btn::after {
  border: none;
}

