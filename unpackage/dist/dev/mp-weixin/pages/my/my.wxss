/* 下划线 */
.status_bar {
  height: calc(25px + 48px);
  width: 100%;
  background-color: #345dc2;
}
.my-header {
  background-color: #345dc2;
}
.my-header .header-content {
  padding: 50rpx 39rpx;
  background-color: #FFFFFF;
  border-radius: 30rpx 30rpx 0 0;
}
.my-header .left .header-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 80rpx;
}
.my-header .left .header-info {
  margin-left: 30rpx;
}
.my-header .left .header-info .nickname {
  font-size: 39rpx;
  font-weight: bold;
}
.my-header .left .header-info .username {
  font-size: 33rpx;
  color: #959DA5;
}
.my-header .icon-right {
  font-size: 35rpx;
  color: #959DA5;
}

