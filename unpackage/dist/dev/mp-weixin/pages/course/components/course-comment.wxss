/* 下划线 */
.comment {
  font-size: 30rpx;
  padding: 0 36rpx;
  background-color: #fff;
}
.comment .comment-item {
  margin-top: 36rpx;
  border-bottom: 0.5px solid #efeff4;
}
.comment .comment-item .info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.comment .comment-item .info image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
}
.comment .comment-item .info .user {
  font-weight: bold;
  line-height: 33rpx;
}
.comment .comment-item .info .user :last-child {
  color: #999;
  font-size: 25rpx;
  font-weight: normal;
}
.comment .comment-item .info :last-child {
  margin-left: auto;
  font-size: 35rpx;
  color: #ff001b;
}
.comment .comment-item .info .grey {
  color: #959DA5;
}
.comment .comment-item .content {
  margin: 25rpx 0;
}
.comment .comment-item .replay {
  background-color: #F8F9FB;
  padding: 15rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  color: #7d828f;
}

