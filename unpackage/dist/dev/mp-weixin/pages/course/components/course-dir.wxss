  margin-top: 30rpx;
  margin-bottom: 10rpx;
  color: #333333;
  font-size: 35rpx;
  font-weight: bold;
}
.course-dir .sections {
  padding: 20rpx 0;
  font-size: 30rpx;
  border-bottom: 0.5px solid #efeff4;
