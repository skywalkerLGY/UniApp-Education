/* 下划线 */
.course-play {
  padding-bottom: 100rpx;
}
.course-info {
  padding: 30rpx;
  font-weight: bold;
  border-bottom: 0.5px solid #efeff4;
}
.course-info .title {
  width: 500rpx;
  font-size: 35rpx;
  line-height: 60rpx;
  color: #333333;
}
.course-info .right > text {
  font-size: 28rpx;
  line-height: 60rpx;
  color: #333333;
}
.bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  background-color: #FFFFFF;
  border-top: 0.5px solid #efeff4;
}
.btn-item text {
  text-align: center;
  color: #959DA5;
  font-size: 25rpx;
}
.btn-item .iconfont {
  font-size: 38rpx;
}

