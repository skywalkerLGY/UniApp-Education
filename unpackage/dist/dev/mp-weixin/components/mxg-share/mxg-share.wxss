/* 下划线 */
.mask {
  z-index: 99;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
}
.share-body {
  z-index: 100;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}
.share-body .share-scroll {
  background-color: #f7f7f7;
  width: 100%;
  height: 200rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  white-space: nowrap;
  padding-top: 45rpx;
}
.share-body .share-scroll .share-item {
  display: -webkit-inline-box;
  display: -webkit-inline-flex;
  display: inline-flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 25%;
}
.share-body .share-scroll .share-item image {
  width: 60rpx;
  height: 60rpx;
}
.share-body .share-scroll .share-item view {
  color: #959DA5;
  font-size: 25rpx;
  padding-top: 10rpx;
}
.share-body .share-cancel {
  background-color: #fff;
  text-align: center;
  width: 100%;
  padding: 25rpx 0;
}

