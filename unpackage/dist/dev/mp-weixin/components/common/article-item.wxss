/* 下划线 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  white-space: normal;
}
.article-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f1f1f1;
}
.article-item .article-content .left-text .title {
  font-size: 35rpx;
  font-weight: bold;
}
.article-item .article-content .left-text .summary {
  padding-top: 5rpx;
  font-size: 26rpx;
  color: #999;
  -webkit-line-clamp: 1;
}
.article-item .article-content .right-image {
  min-width: 220rpx;
  margin-left: 5rpx;
}
.article-item .article-content .right-image image {
  width: 220rpx;
  height: 140rpx;
  border-radius: 10rpx;
}
.article-item .article-info text {
  font-size: 26rpx;
  color: #999;
  padding-right: 10rpx;
}
.article-item .article-info text:first-child {
  color: #222222;
}

