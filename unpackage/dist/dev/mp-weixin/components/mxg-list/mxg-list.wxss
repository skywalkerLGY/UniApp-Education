/* 下划线 */
.list-box {
  background-color: #F8F9FB;
  padding-top: 20rpx;
}
.list-box .list {
  background-color: #FFFFFF;
  margin-bottom: 20rpx;
}
.list-box .list .list-item {
  padding: 26rpx 39rpx;
  border-bottom: 0.5px solid #efeff4;
}
.list-box .list .left {
  font-size: 33rpx;
}
.list-box .list .left text:first-child {
  margin-right: 20rpx;
}
.list-box .list .right text {
  font-size: 35rpx;
  color: #959DA5;
  margin-left: 15rpx;
}
.list-box .list .right image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}
.list-box .list .right switch {
  margin-right: -10rpx;
}
.list-box .list .active {
  background-color: #fafafa;
}
image {
  width: 80rpx;
  height: 80rpx;
